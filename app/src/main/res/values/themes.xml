<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorTextLight</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorTextLight</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        
        <!-- Custom attributes -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
        
        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.App.Button</item>
        
        <!-- Switch style -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>
</resources>
